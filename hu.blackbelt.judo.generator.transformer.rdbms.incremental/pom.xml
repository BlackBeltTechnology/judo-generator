								</goals>
								<configuration>
									<metaModels>
										<metaModel>mvn:${project.groupId}:hu.blackbelt.judo.generator.meta.rdbms:ecore:rdbms:${project.version}</metaModel>
									</metaModels>
									<models>
										<model>
											<artifact>${project.build.directory}/anakin-model-${test.model.version}.rdbmsHsqldb.model</artifact>
