											<name>TARGET</name>
											<readOnLoad>false</readOnLoad>
											<storeOnDisposal>true</storeOnDisposal>
											<metaModelUris>
												<param>http://blackbelt.hu/judo/meta/psm/rdbms</param>
											</metaModelUris>
										</model>
									</models>
									<eolPrograms>
										<Etl>
											<source>src/transformations/rdbms/createIncrementalOperationModel.etl</source>
										</Etl>
									</eolPrograms>
								</configuration>
							</execution>

